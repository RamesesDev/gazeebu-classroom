<schema>
    <element name="criteria" tablename="grading_criteria">
    	<field name="objid" primary="true"/>
    	<field name="classid"/>
	   	<field name="title"/>
		<field name="weight"/>
		<field name="indexno"/>
		<field name="subentries"/>
		<field name="colorcode"/>
    </element> 
    <element name="subcriteria" tablename="grading_subcriteria">
    	<field name="objid" primary="true"/>
    	<field name="criteriaid"/>
	   	<field name="title"/>
		<field name="weight"/>
		<field name="indexno"/>
    </element> 
	 <element name="period" tablename="grading_period">
    	<field name="objid" primary="true"/>
    	<field name="classid"/>
    	<field name="title"/>
		<field name="weight"/>
    	<field name="fromdate"/>
    	<field name="todate"/>
    </element>
	<element name="eq" tablename="grading_eq">
    	<field name="objid" primary="true"/>
    	<field name="classid"/>
		<field name="title"/>
    	<field name="fromscore"/>
		<field name="toscore"/>
    	<field name="indexno"/>
    </element>
</schema>
